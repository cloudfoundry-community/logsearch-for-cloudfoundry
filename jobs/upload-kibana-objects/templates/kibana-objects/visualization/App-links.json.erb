<% require 'json' %>
<% if( ['LogMessage', 'ContainerMetric'].any? { |event| p('cloudfoundry.firehose_events').include?(event)} ) %>
<% 
logmessage_enabled = p('cloudfoundry.firehose_events').include? 'LogMessage'
containermetric_enabled = p('cloudfoundry.firehose_events').include? 'ContainerMetric'

if (logmessage_enabled == true)
  links = "[performance](#/dashboard/App-Performance) | [errors](#/dashboard/App-Errors) | [logs](#/dashboard/App-Logs) | [location](#/dashboard/App-Location)"
  
  if (containermetric_enabled == true)
    links += " | [metrics](#/dashboard/App-Metrics)"
  end
    
elsif (containermetric_enabled == true)
  links = "[metrics](#/dashboard/App-Metrics)"
  
end

%> 
{
  "title": "App links",
  "visState": "<%= JSON.parse(
    {
      "title": "App links",
      "type": "markdown",
