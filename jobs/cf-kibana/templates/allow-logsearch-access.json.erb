<%
  elasticsearch_host = nil
  elasticsearch_port = nil
  if_p('cf-kibana.elasticsearch.host') do |prop|
    elasticsearch_host = prop
  end.else do
    elasticsearch_host = link('elasticsearch').instances.first.address
  end

  if_p('cf-kibana.elasticsearch.port') do |prop|
    elasticsearch_port = prop
  end.else do
    elasticsearch_port = link('elasticsearch').p("elasticsearch.port")
  end

  redis_host = nil
  redis_port = nil
  if_link("redis") { |redis_link|
    redis_host = redis_link.instances.first.address
    redis_port = redis_link.p("redis.port")
  }
  unless redis_host
    redis_host = p("redis.host")
  end
  unless redis_port
    redis_port = p("redis.port")
  end
%>
[
    {
        "protocol":"tcp",
        "destination":"<%= elasticsearch_host %>/32",
        "ports":"<%= elasticsearch_port %>"
    },
    {
        "protocol":"tcp",
        "destination":"<%= redis_host %>/32",
        "ports":"<%= redis_port %>"
    }
]
